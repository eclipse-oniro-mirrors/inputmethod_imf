import("//base/inputmethod/imf/inputmethod.gni")
import("//build/ohos.gni")

config("inputmethod_tdd_util_config") {
  visibility = [ ":*" ]
  include_dirs = [ "./" ]
  ldflags = [ "-Wl,--exclude-libs=ALL" ]
  cflags = [
    "-fdata-sections",
    "-ffunction-sections",
    "-fvisibility=hidden",
  ]
}

config("inputmethod_tdd_util_public_config") {
  visibility = [ "./*" ]
  include_dirs = [
    "include",
    "${bundllemanager_path}/interfaces/inner_api/appexecfwk_core/include/bundlemgr",
  ]
}

ohos_static_library("inputmethod_tdd_util") {
  sources = [
    "src/key_event_util.cpp",
    "src/tdd_util.cpp",
  ]
  configs = [ ":inputmethod_tdd_util_config" ]
  public_configs = [ ":inputmethod_tdd_util_public_config" ]
  deps = [ "${inputmethod_path}/services:inputmethod_service" ]
  external_deps = [
    "access_token:libaccesstoken_sdk",
    "access_token:libnativetoken",
    "access_token:libtoken_setproc",
    "bundle_framework:appexecfwk_core",
    "hilog:libhilog",
    "input:libmmi-client",
    "os_account:os_account_innerkits",
    "safwk:system_ability_fwk",
    "samgr:samgr_proxy",
    "window_manager:libwm",
  ]
  subsystem_name = "inputmethod"
  part_name = "imf"
}
